{
       "Version": "2012-10-17",
       "Id": "PutObjPolicy",
       "Statement": [
             {
                  "Sid": "DenyIncorrectEncryptionHeader",
                  "Effect": "Deny",
                  "Principal": "*",
                  "Action": "s3:PutObject",
                  "Resource": "${s3_bucket_arn}/*",
                  "Condition": {
                          "StringNotEquals": {
                                 "s3:x-amz-server-side-encryption": "AES256"
                           }
                  }
             },
             {
                  "Sid": "DenyUnEncryptedObjectUploads",
                  "Effect": "Deny",
                  "Principal": "*",
                  "Action": "s3:PutObject",
                  "Resource": "${s3_bucket_arn}/*",
                  "Condition": {
                          "Null": {
                                 "s3:x-amz-server-side-encryption": true
                          }
                 }
             }
       ]
}
